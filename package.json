{
  "name": "ejs-syntax-highlighting",
  "displayName": "EJS Syntax Highlighting",
  "description": "Syntax highlighting support for EJS templates",
  "author": {
    "name": "hoojiNT",
    "email": "thehoinguyen@outlook.com"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:ejs"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ejs",
        "aliases": [
          "EJS",
          "ejs"
        ],
        "extensions": [
          ".ejs"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ejs",
        "scopeName": "text.html.ejs",
        "path": "./syntaxes/ejs.tmLanguage.json"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
