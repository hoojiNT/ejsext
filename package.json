{
  "name": "ejs-syntax-highlighting",
  "displayName": "Better EJS",
  "description": "Syntax highlighting support for EJS templates",
  "repository": {
    "url": "https://github.com/hoojiNT/ejsext"
  },
  "publisher": "hoojint",
  "author": {
    "name": "hoojiNT",
    "email": "thehoinguyen@outlook.com"
  },
  "version": "0.0.1",
  "license": "MIT",
  "icon": "ejs.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:ejs"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ejs",
        "aliases": [
          "EJS",
          "ejs"
        ],
        "extensions": [
          ".ejs"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ejs",
        "scopeName": "text.html.ejs",
        "path": "./syntaxes/ejs.tmLanguage.json"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vitest/ui": "^3.2.4",
    "typescript": "^4.9.4",
    "vitest": "^3.2.4"
  }
}
